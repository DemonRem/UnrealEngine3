<project name="UE3_xenonBVTBuilder"
        default="build"
        basedir="checkout/UE3_xenonBVTBuilder/UnrealEngine3/Development/Src">

  <target name="init">
    <!-- set some properties -->
  </target>
  <target name="clean" depends="init">
    <!-- clean up object files -->
  </target>
  <target name="nuke" depends="init">
    <!-- delete the working dir -->
  </target>
  <target name="checkout" depends="nuke">
    <!-- check out the working dir -->
  </target>
  <target name="update" depends="clean">
    <!-- run a cvs update on the working dir -->
  </target>

  <!-- this will set the immutable properties for this builder. -->
  <!-- NOTE:  properties are inherited so when we do our antcall it will get them -->
  <target name="setProperties">
     <property name="unrealEngine3.binaries.dir" value="C:\continuousIntegration\checkout\UE3_xenonBVTBuilder\UnrealEngine3\Binaries"/>
     <property name="unrealEngine3.src.dir" value="C:\continuousIntegration\checkout\UE3_xenonBVTBuilder\UnrealEngine3\Development\Src"/>

     <property name="compileOptions.buildmode.PC" value="release"/>
     <property name="compileOptions.buildmode.Xbox360" value="xerelease"/>
     <property name="compileOptions.buildmode.PS3" value="release"/>

     <property name="compileOptions.rebuild.PC" value="true"/>
     <property name="compileOptions.rebuild.Xbox360" value="true"/>
     <property name="compileOptions.rebuild.PS3" value="true"/>

     <property name="exampleGame.execName" value="ExampleGame.com"/>
     <property name="ut2007.execName" value="UTGame.com"/>
     <property name="warfare.execName" value="WarGame.com"/>

     <property name="bvt.distrib.projectFolder" value="UE3_xenonBVTBuilder"/>

  </target>

  <!-- this will get the latest code from p4 for this builder -->
  <target name="getLatestFromP4">

    <p4sync 
	port="p4-server.epicgames.net:1666"
	client="CIS-UE3-XenonBVTBuilder2"
	user="build_machine"
        view="//depot/UnrealEngine3/...@latestUnrealEngine3-PCAndXenon"
    />

  </target>

  <target name="build" depends="setProperties, getLatestFromP4"> 
      <!-- Call the target that builds -->
      <ant antfile="build.xml" target="UE3_xenonBVTLocBuilder"/>
  </target>



</project>



